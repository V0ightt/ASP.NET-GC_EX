@{
    ViewData["Title"] = "Expense Page";
}
@model List<Expense>

<div class="text-center">
    <h1 class="display-4">Expenses</h1>
    <br />
	<h2 class="display-4 btn btn-outline-success">Total Expenses: $@ViewBag.TotalExpenses</h2>
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Value</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                foreach (var expense in Model)
                {
                    <tr>
                        <td>
                            @expense.Id
                        </td>
                        <td>
                            @expense.Value
                        </td>
                        <td>
                            @expense.Property
                        </td>
                        <td>
                        <form asp-action="DeleteExpense" asp-controller="Home" method="post">
                            <input type="hidden" name="id" value="@expense.Id" />
                            <button type="submit" class="btn btn-outline-danger">Delete</button>
                        </form>
                        <a class="btn btn-outline-info mt-4" asp-controller="Home" asp-action="AddEditExpenses" asp-route-id="@expense.Id">Edit</a>
                        </td>
                    </tr>
                }
            }
        </tbody>
    </table>
</div>